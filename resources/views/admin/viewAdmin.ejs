<%- include("../partials/sidebar.ejs") %>
    <section id="main-content">
        <%- include("../partials/dashNav.ejs") %>
            <div class="main-content-info mt-12">
                <div class="px-12 py-10 w-full">
                    <h1 class="font-bold text-2xl mb-4">All Items</h1>
                    <table class="w-full mx-auto px-16 ptable-auto bg-white italic">
                        <thead>
                            <tr class="pt-12">
                                <th class=" px-4 py-2 text-left">Name</th>
                                <th class=" px-4 py-2 text-left">Email Address</th>
                                <th class=" px-4 py-2 text-left">Actions</th>
                            </tr>
                        </thead>
                        <% users.forEach(function(user) { %>
                            <tr class="text-gray-600 border-b border-gray-200 hover:bg-gray-100">
                                <td class=" px-4 py-2 text-left">
                                    <%= user.name %>
                                </td>
                                <td class=" px-4 py-2 text-left">
                                    <%= user.email %>
                                </td>
                                <td class=" px-4 py-2 text-left ">
                                    <a href="/deleteUser?id=<%= user._id %>">
                                        <i class="fas fa-trash-alt hover:bg-red-700"></i>
                                    </a>
                                    &nbsp;
                                    <a href="/updateUser?id=<%= user._id %>">
                                        <i class="fas fa-edit hover:bg-red-700"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>
            </div>
    </section>